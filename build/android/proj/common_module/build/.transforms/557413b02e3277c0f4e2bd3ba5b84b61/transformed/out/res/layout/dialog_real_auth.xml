<?xml version="1.0" encoding="utf-8"?>

                                                        

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/dialog_real_auth_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <View
            android:id="@+id/v_1"
            android:layout_width="286dp"
            android:layout_height="331dp"
            android:background="@drawable/ic_auth_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_2"
            android:layout_width="265dp"
            android:layout_height="33dp"
            android:layout_marginTop="168dp"
            android:background="@drawable/ic_edit_auth_bg"
            app:layout_constraintLeft_toLeftOf="@id/v_1"
            app:layout_constraintRight_toRightOf="@id/v_1"
            app:layout_constraintTop_toTopOf="@id/v_1" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="姓名:"
            android:textColor="@color/color_000000"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/v_2"
            app:layout_constraintLeft_toLeftOf="@id/v_2"
            app:layout_constraintTop_toTopOf="@id/v_2" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/v_2"
            app:layout_constraintLeft_toRightOf="@id/tv_name"
            app:layout_constraintRight_toRightOf="@id/v_2"
            app:layout_constraintTop_toTopOf="@id/v_2" />


        <View
            android:id="@+id/v_3"
            android:layout_width="265dp"
            android:layout_height="33dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_edit_auth_bg"
            app:layout_constraintLeft_toLeftOf="@id/v_1"
            app:layout_constraintRight_toRightOf="@id/v_1"
            app:layout_constraintTop_toBottomOf="@id/v_2" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="身份证号:"
            android:textColor="@color/color_000000"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/v_3"
            app:layout_constraintLeft_toLeftOf="@id/v_3"
            app:layout_constraintTop_toTopOf="@id/v_3" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_number"
            android:layout_width="150dp"
            android:layout_height="33dp"
            android:background="@null"
            android:gravity="center"
            android:maxLength="18"
            android:textColor="@color/color_000000"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/v_3"
            app:layout_constraintLeft_toRightOf="@id/tv_number"
            app:layout_constraintRight_toRightOf="@id/v_3"
            app:layout_constraintTop_toTopOf="@id/v_3" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_confirm"
            android:layout_width="154dp"
            android:layout_height="32dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/tv_auth_confirm"
            android:gravity="center"
            android:text="确认提交"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@id/v_1"
            app:layout_constraintRight_toRightOf="@id/v_1"
            app:layout_constraintTop_toBottomOf="@id/v_3" />


        <View
            android:id="@+id/v_4"
            android:layout_width="206dp"
            android:layout_height="25dp"
            android:layout_marginTop="26dp"
            android:alpha="0.4"
            android:background="@drawable/tv_auth_fail_bg"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_fail_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证与姓名不一致，请重新输入"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/v_4"
            app:layout_constraintLeft_toLeftOf="@id/v_4"
            app:layout_constraintRight_toRightOf="@id/v_4"
            app:layout_constraintTop_toTopOf="@id/v_4" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="165dp"
            android:visibility="gone"
            android:id="@+id/iv_auth_success"
            android:src="@drawable/ic_auth_success"
            app:layout_constraintLeft_toLeftOf="@id/v_2"
            app:layout_constraintRight_toRightOf="@id/v_2"
            app:layout_constraintTop_toTopOf="@id/v_1"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
         