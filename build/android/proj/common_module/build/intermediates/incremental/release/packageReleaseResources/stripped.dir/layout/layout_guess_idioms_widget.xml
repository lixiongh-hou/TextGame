<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_column_1"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:background="@drawable/ic_guess_box_1"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="@id/v_1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_column_2"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_guess_box_1"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_column_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_column_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_column_3"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_guess_box_1"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_column_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_column_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_row_1"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_guess_box_1"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_1" />

    <View
        android:id="@+id/v_1"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_guess_box_2"
        app:layout_constraintLeft_toRightOf="@id/tv_row_1"
        app:layout_constraintTop_toBottomOf="@id/tv_column_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_guess"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#ff5a5a"
        android:textSize="26sp"
        app:layout_constraintLeft_toRightOf="@id/tv_row_1"
        app:layout_constraintTop_toBottomOf="@id/tv_column_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_row_3"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_guess_box_1"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="26sp"
        app:layout_constraintLeft_toRightOf="@id/v_1"
        app:layout_constraintTop_toTopOf="@id/v_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_row_4"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_guess_box_1"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="26sp"
        app:layout_constraintLeft_toRightOf="@id/tv_row_3"
        app:layout_constraintTop_toTopOf="@id/tv_row_3" />
</androidx.constraintlayout.widget.ConstraintLayout>