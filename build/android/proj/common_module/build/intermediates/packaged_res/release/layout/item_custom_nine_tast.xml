<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="60dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每玩大转盘3次"
        android:textColor="@color/color_333333"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/v_progress"
        />

<!--    android:progressDrawable="@drawable/progressbar_nine_wheel"-->
    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/v_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="154dp"
        android:layout_height="13dp"
        android:layout_marginTop="9dp"
        android:max="3"
        android:progress="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_progress_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/3"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/v_progress"
        app:layout_constraintLeft_toLeftOf="@id/v_progress"
        app:layout_constraintRight_toRightOf="@id/v_progress"
        app:layout_constraintTop_toTopOf="@id/v_progress" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_get_prize_num"
        android:layout_width="77dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:text="领取"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>