<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape >
            <corners android:radius="8dp" />
            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="#C6352B"
                android:startColor="#C6352B" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">

        <clip >
            <shape >
                <corners android:radius="8dp" />
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#F2D5B2"
                    android:startColor="#F2D5B2" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">

        <clip >
            <shape >
                <corners android:radius="8dp" />
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#FFC936"
                    android:startColor="#FFC936" />
            </shape>

        </clip>
    </item>
</layer-list>