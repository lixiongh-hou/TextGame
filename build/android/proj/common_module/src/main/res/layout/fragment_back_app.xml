<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/cs_wihte_13_bg">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="20dp"
            android:id="@+id/iv_close"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_app_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:minHeight="150dp"
            android:textColor="@color/color_000000"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_agree"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/tv_back_app_agree_bg"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:gravity="center"
            android:text="不同意,退出App"
            android:textColor="#616060"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_agree" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>